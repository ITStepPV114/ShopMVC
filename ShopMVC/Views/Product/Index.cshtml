@model List<DataAccess.Models.Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">
    @if (Model.Any())
    {
        <h3>Count product: @Model.Count()</h3>
        <div class="row">
            @foreach(var product in Model){
            <div class="col-sm-4">
                <div class="card">
                     <div class="text-center">
                        <img  src="@product.ImagePath" class="card-img-top w-50" alt="...">
                     </div>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="fw-bold">Price <span class="badge bg-primary">@product.Price</span></p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id=@product.Id class="btn btn-dark">Details</a>
                        <a asp-controller="Product"  asp-action="Delete" asp-route-id=@product.Id class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
            }
        </div>

    }
    else
    {
        <h3>Products was not found...</h3>
    }

</div>