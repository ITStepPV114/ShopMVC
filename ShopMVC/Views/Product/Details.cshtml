@model Product

<div class="container">
    <div class="card">
        <h5 class="card-header">Info Product</h5>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="fw-bold">Price <span class="badge bg-primary">@Model.Price</span></p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Go to Back</a>
        </div>
    </div>
</div>