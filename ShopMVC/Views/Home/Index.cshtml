@model List<ProductCartViewModel>
@*@model IEnumerable<Product>*@

@{
    ViewData["Title"] = "Home Page";
    string productImagePlaceholder = @"https://www.freeiconspng.com/thumbs/no-image-icon/no-image-icon-15.png";
}

<h4>List Products</h4>
@if (Context.Request.Cookies.ContainsKey("name"))
{
    <p>    @Context.Request.Cookies["name"]</p>
    <p>    @ViewBag.NameAuthor</p>
}
else
{
    
<p>Not Cookies</p>
}
<div class="container">
    <div class="row">
        <div class="col-3">
            <!-- start col-3 -->
            @*navigation category*@
            <ul class="nav flex-column">
                @foreach (var category in ViewBag.ListCategories)
                {

                    @if (ViewBag.ActiveCategoryId == category.Id)
                    {
                        <li class="nav-item">
                            <a class="nav-link disabled" aria-current="page">@category.Name</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" asp-route-category_id="@category.Id" class="nav-link active" aria-current="page">@category.Name</a>
                        </li>
                    }
                }
                @*  <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                <a class="nav-link disabled">Disabled</a>
                </li>*@
            </ul>

        </div> <!-- close col-3 -->
        <div class="col-9">
            <!-- start col-3 -->
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-sm-4">
                            <div class="card">
                                <div class="product-card-img">
                                    <img src="@(product.Product.ImagePath??productImagePlaceholder)" class="card-img-top" alt="...">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@product.Product.Name</h5>

                                    <p class="card-text">@product.Product.Description</p>
                                    <p class="fw-bold">Price <span class="badge bg-primary">@product.Product.Price</span></p>
                                    <a asp-controller="Product" asp-action="Details" asp-route-id=@product.Product.Id asp-route-returnUrl="@Context.Request.Path" class="btn btn-dark">Details</a>
                                    @if (!product.IsInCart)
                                    {
                                        <a asp-controller="Cart" asp-action="Add" asp-route-id=@product.Product.Id class="btn btn-danger">Add To Cart</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Cart" asp-action="Remove" asp-route-id=@product.Product.Id class="btn btn-secondary">Delete From Cart</a>
                                    }

                                        
                                   
                                    </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="row">
                    <h3>Products was not found...</h3>
                </div>
            }
        </div> <!-- close col-9 -->
    </div> <!-- close row -->
</div> <!-- close container -->